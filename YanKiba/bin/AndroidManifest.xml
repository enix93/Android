<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="projet.yankiba"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" /> 
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="projet.yankiba.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="projet.yankiba.ChargementBase"
            android:label="@string/title_activity_chargement_base" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="projet.yankiba.NouveauUser"
            android:label="@string/title_activity_nouveau_user" >
        </activity>
        <activity
            android:name="projet.yankiba.RechercheActivity"
            android:label="@string/title_activity_recherche" >
        </activity>
    </application>

</manifest>
